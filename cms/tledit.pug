html
  head
    title Timeline Edit
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style
      include style.css
  body
    div(class='topmenu')
      div(class='menuleft')
        a(href='/api/cms/newtlentry', class='button') New Entry
        a(href='/api/cms/tlentries', class='button') Timeline Entries
        a(href='/api/cms/newtag', class='button') New Tag
      div(class='menuright')
        a(href='/logout', class='button') Logout
    div(class='main')
      h3(class='title') Timeline Edit
      h4(class='title') Hello #{username}
      if message
        p(class='message') #{message}
      form(action='/api/cms/tledit/' + data._id, method='post')
          div
            label(class='field') Date: 
            input(type='date', name='date_of_the_news', value=data.date_of_the_news, required="", class='inputedit')
          div
            label(class='field') Text: 
            textarea(name='text_of_timeline', required="", cols=100, rows=10, class='inputedit')
              | #{data.text_of_timeline}
          div
            label(class='field') Source: 
            input(type='text', name='source', value=data.source, required="", class='inputedit')
          div
            label(class='field') Link for the news: 
            input(type='url', name='link_news', value=data.link_news, required="", size=60, class='inputedit')
          div
            label(class='field') Tags:
              div
                ul
                  each item in tags
                    div
                      //- input(type='checkbox', name='tags', value=item, checked=(item===data.tags ? "checked" : undefined))
                      input(type='checkbox', name='tags', value=item, checked=(data.tags.map(dt => item===dt ? "checked" : undefined ).includes('checked')))
                      label(for=item) #{item}
          div
            label(class='field') Author: 
            input(type='text', name='author', value=data.author, required="", readonly, class='inputedit')
          div
            input(type='submit', value='Submit', class='button')